rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // REPLAYS: İstemci sadece okur, yazamaz
    match /replays/{season}/{league}/{matchId=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // RESULTS: Sadece sunucu (signed URL / service account). İstemci ne okuyabilir ne yazabilir.
    match /results/{season}/{league}/{resultFile=**} {
      allow read: if false;
      allow write: if false;
    }

    // JOBS: Batch dosyaları (Unity worker iç kullanım). Tamamen kapalı.
    match /jobs/{day}/{file=**} {
      allow read: if false;
      allow write: if false;
    }

    // Varsayılan: her şeyi kapat
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
