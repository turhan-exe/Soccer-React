{
    "hosting":  {
                    "public":  "dist",
                    "ignore":  [
                                   "firebase.json",
                                   "**/.*",
                                   "**/node_modules/**"
                               ],
                    "rewrites":  [
                                     {
                                         "source":  "**",
                                         "destination":  "/index.html"
                                     }
                                 ]
                },
    "functions":  {
                      "source":  "src/functions",
                      "runtime":  "nodejs20",
                      "predeploy":  [
                                        "npm --prefix \"$RESOURCE_DIR\" ci",
                                        "npm --prefix \"$RESOURCE_DIR\" run build"
                                    ]
                  },
    "firestore":  {
                      "rules":  "firestore.rules",
                      "indexes":  "firestore.indexes.json"
                  },
    "database":  {
                     "rules":  "database.rules.json"
                 },
    "storage":  {
                    "rules":  "storage.rules"
                }
}
